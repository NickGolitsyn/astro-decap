---
import BlogPost from '../components/BlogPost';
import Layout from './Layout.astro';

const { content } = Astro.props;
const { title, description, publishDate, author, authorURL, heroImage, coverImage, permalink, alt } = content;
---

<Layout {title} {description} {permalink}>
	<BlogPost client:load {title} {author} {authorURL} {heroImage} {coverImage} {publishDate} {alt}>
		<slot />
	</BlogPost>
</Layout>

