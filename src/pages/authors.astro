---
import { SITE } from "../config";
import Layout from "../layouts/Layout.astro";

let { description, permalink } = SITE;

let allAuthors = await Astro.glob('./authors/*.md');
---

<Layout title="Авторы" {description} {permalink}>
  <main class="content">
    <h1 class="text-4xl font-bold">автор_ки</h1>
    <section class="flex flex-wrap gap-y-5 gap-x-10 text-xl mt-10">
      {allAuthors.map((author) => (
        <h2><a href={author.url}>{author.frontmatter.title}</a></h2>
      ))}
    </section>
  </main>
</Layout>

<style>
  .content {
    margin-top: 4rem;
    margin-bottom: 8rem;
  }
</style>